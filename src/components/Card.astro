---
interface Props {
    title: string;
    text: string;
    style: string;
    img: string
}

const { title, text, style, img } = Astro.props;
---

<section class={style}>
    
    <article class="card">
        <img src={img} alt="nina">
    </article>
    <div class="text-content">

        <p class="subText">{text}</p>
        <h4 class="text-gradient">{title}</h4>
    </div>
</section>

<style>
    .card {
		display: flex;
		flex-direction: column;
		box-shadow: 0px 10px 15px -10px rgb(7, 7, 7);
		margin: 1rem;
		width: 55vw;
		height: 50vh;
		align-items: flex-end;
		view-timeline-name: --image;
		animation-timeline: --image;
		animation-name: scroll;
		animation-range: entry 45% cover 50%;
		animation-fill-mode: both;
		border-radius: 1rem;
		overflow: hidden;
        position: relative;
	}
    section {
        display: flex;
        height: 100vh;
        width: 55vw;
        font-size: 4em;
        justify-content: center;
        width: 100%;
        flex-direction: column;
    }
    h4 {
        z-index: 100;
        view-timeline-name: --image;
		animation-timeline: --image;
		animation-name: scroll;
		animation-range: entry 45% cover 20%;
		animation-fill-mode: both;
    }
    p {
        font-size: 1rem;
        text-align: right;
    }
    img {
        position: absolute;
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: all 0.4s ease;
        z-index: 10;
    }
    .card:hover img{
        transform:scale(1.5);
    }
    .text-content{
        position: relative;
        width: 55vw;
        text-align: center;
    }
    
    .subText {
        bottom: 45%;
        right: 2%;
        position: absolute;
        z-index: 10000000000;
        white-space: nowrap;
        font-size: 2.2em;
        color: rgba(24, 24, 24, 0.418);
        font-weight: bold;
        opacity: 0;
        transition: all 0.4s ease;
    }
    section:hover .subText{
        opacity: 1;
    }
    .left {
        align-items: flex-start;
    }
    .right {
        align-items: flex-end;
    }
    @keyframes scroll {
		from {
			opacity: 0.2;
			scale: 35%;
		}

		to {
			opacity: 1;
			scale: 100%;
		}
	}
</style>
